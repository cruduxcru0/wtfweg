    "version": "0.2.0",
    "configurations": [

        {
            "name": "dbg libretro core (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/compile_dir/wtfweg",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/compile_dir",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ],
        },
        {
            "name": "dbg libretro core (Win32)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/compile_dir/wtfweg.exe",
            "args": ["--core_name=C:/codecrak/wip/bewm_libretro/compile_dir/libbewm-libretro.dll",
            "--rom_name=C:/codecrak/wip/bewm_libretro/compile_dir/test.xm"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/compile_dir",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },

        {
        "preLaunchTask": "builddbg",
        "name": "Compile/Debug (Linux)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/compile_dir/demo",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/compile_dir",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
    },

        {
            "preLaunchTask": "builddbg",
            "name": "Compile/Debug (Windows)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/compile_dir/wtfweg.exe",
            "args": ["--core_name=C:/codecrak/wip/bewm_libretro/compile_dir/libbewm-libretro.dll",
            "--rom_name=C:/codecrak/wip/bewm_libretro/compile_dir/temp.mp3"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/compile_dir",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}